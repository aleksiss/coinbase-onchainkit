{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": true,
      "allowJs": true,
      "checkJs": false,
      "noImplicitAny": false,
      "skipTypeCheck": true,
      "skipLibCheck": true,
      "rootDir": "src",
      "baseUrl": ".",
      "paths": {
        "@/core/*": ["src/core/*"],
        "@/core-react/*": ["src/core-react/*"],
        "@/ui-react/*": ["src/ui/react/*"],
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.test.*"]
  }