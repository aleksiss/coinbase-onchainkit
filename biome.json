{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "ignore": ["package.json"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 10
          }
        },
        "noVoid": "error"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "error",
        "noNodejsModules": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useArrayLiterals": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    },
    "ignore": [
      "site/tailwind.config.js",
      "site/vocs.config.tsx",
      "src/internal/form/useDebounce.ts"
    ]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": [
      ".yarn",
      ".changeset",
      ".next",
      "coverage",
      "esm",
      "framegear",
      "dist",
      "site/docs/dist/"
    ]
  }
}
